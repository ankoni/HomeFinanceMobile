<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.category.UserCategories">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/categoryListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/categoryList"
            android:paddingHorizontal="16dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorSecond"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@id/categoryListContainer"
            app:layout_constraintEnd_toEndOf="@id/categoryListContainer"
            app:srcCompat="@mipmap/button_add"
            app:useCompatPadding="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>